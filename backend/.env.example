# Chitta Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Chitta
DEBUG=True
API_V1_PREFIX=/api/v1

# LLM Provider Configuration
# Choose one: "gemini", "anthropic", or "openai"
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-pro

# Gemini API Key (recommended - free in preview)
# Get your key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API Key (optional)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI API Key (optional)
# OPENAI_API_KEY=your_openai_key_here
# OPENAI_MODEL=gpt-4o

# Graphiti & FalkorDB Configuration
# FalkorDB - Fast graph database for temporal knowledge graph
FALKORDB_HOST=localhost
FALKORDB_PORT=6379
FALKORDB_PASSWORD=  # Optional, leave empty if no password
FALKORDB_GRAPH=chitta

# CORS - Allow these origins to access the API
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Authentication
# Generate a random secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-generate-a-random-string-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# File Storage
# For production, use S3
# STORAGE_TYPE=local  # or "s3"
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=chitta-videos
# AWS_REGION=us-east-1

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
